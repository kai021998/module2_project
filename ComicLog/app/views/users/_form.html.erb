<%= form_for @user do |f| %>
  <%= if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <l1><%= msg %></l1>
    </ul>
      <%= end %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.text_field :password %>

<%= f.submit %>

<% end %> %>
